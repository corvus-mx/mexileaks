---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Plataforma segura para filtraciones anónimas en México. Protegemos tu identidad mientras exponemos la corrupción." } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="CORVUS MexiLeaks" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Security Headers -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="DENY" />
    <meta http-equiv="Referrer-Policy" content="no-referrer" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Nerd Font Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/ryanoasis/nerd-fonts@master/css/nerd-fonts-generated.css">
    
    <title>{title}</title>
  </head>
  <body class="bg-gray-950 text-gray-100 font-mono min-h-screen flex flex-col antialiased">
    <slot />
    
    <style is:global>
      :root {
        --bg-primary: #0a0a0f;
        --bg-secondary: #111118;
        --bg-tertiary: #1a1a24;
        --text-primary: #f8fafc;
        --text-secondary: #cbd5e1;
        --text-muted: #64748b;
        --accent-red: #ef4444;
        --accent-red-hover: #dc2626;
        --accent-blue: #3b82f6;
        --accent-green: #10b981;
        --accent-yellow: #f59e0b;
        --border-primary: #334155;
        --border-secondary: #1e293b;
      }

      * {
        box-sizing: border-box;
      }

      body {
        background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
        color: var(--text-primary);
        font-family: 'JetBrains Mono', 'Nerd Font Complete', monospace;
        line-height: 1.6;
        overflow-x: hidden;
      }

      .font-sans {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      }

      .nf {
        font-family: 'Nerd Font Complete', 'JetBrains Mono', monospace;
        font-feature-settings: "liga" 1;
      }

      /* Scrollbar styling */
      ::-webkit-scrollbar {
        width: 8px;
      }

      ::-webkit-scrollbar-track {
        background: var(--bg-secondary);
      }

      ::-webkit-scrollbar-thumb {
        background: var(--border-primary);
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: var(--text-muted);
      }

      /* Selection styling */
      ::selection {
        background: var(--accent-red);
        color: white;
      }

      /* Focus styles */
      a:focus,
      button:focus {
        outline: 2px solid var(--accent-red);
        outline-offset: 2px;
      }

      /* Smooth transitions */
      * {
        transition: color 0.2s ease, background-color 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
      }

      /* Container utilities */
      .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      @media (min-width: 640px) {
        .container {
          padding: 0 1.5rem;
        }
      }

      @media (min-width: 1024px) {
        .container {
          padding: 0 2rem;
        }
      }

      /* Card components */
      .card {
        background: var(--bg-tertiary);
        border: 1px solid var(--border-secondary);
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
      }

      .card-hover {
        transition: all 0.3s ease;
      }

      .card-hover:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px -5px rgba(239, 68, 68, 0.2);
        border-color: var(--accent-red);
      }

      /* Button components */
      .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        cursor: pointer;
        border: none;
        font-family: inherit;
      }

      .btn-primary {
        background: var(--accent-red);
        color: white;
      }

      .btn-primary:hover {
        background: var(--accent-red-hover);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
      }

      .btn-secondary {
        background: var(--bg-tertiary);
        color: var(--text-secondary);
        border: 1px solid var(--border-primary);
      }

      .btn-secondary:hover {
        background: var(--border-secondary);
        color: var(--text-primary);
      }

      .btn-ghost {
        background: transparent;
        color: var(--text-secondary);
        border: 1px solid transparent;
      }

      .btn-ghost:hover {
        background: var(--bg-tertiary);
        color: var(--text-primary);
        border-color: var(--border-primary);
      }

      /* Typography */
      h1, h2, h3, h4, h5, h6 {
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 1rem;
      }

      h1 {
        font-size: clamp(2rem, 5vw, 3.5rem);
      }

      h2 {
        font-size: clamp(1.5rem, 4vw, 2.5rem);
      }

      h3 {
        font-size: clamp(1.25rem, 3vw, 2rem);
      }

      /* Links */
      a {
        color: var(--accent-red);
        text-decoration: underline;
        text-decoration-color: transparent;
        transition: all 0.2s ease;
      }

      a:hover {
        text-decoration-color: currentColor;
        color: var(--accent-red-hover);
      }

      /* Grid utilities */
      .grid-auto {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
      }

      .grid-responsive {
        display: grid;
        gap: 1.5rem;
        grid-template-columns: 1fr;
      }

      @media (min-width: 768px) {
        .grid-responsive {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (min-width: 1024px) {
        .grid-responsive {
          grid-template-columns: repeat(3, 1fr);
        }
      }

      /* Animations */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .animate-fade-in-up {
        animation: fadeInUp 0.6s ease-out;
      }

      /* Status indicators */
      .status-active {
        color: var(--accent-green);
      }

      .status-warning {
        color: var(--accent-yellow);
      }

      .status-error {
        color: var(--accent-red);
      }

      /* Responsive utilities */
      .text-responsive {
        font-size: clamp(0.875rem, 2.5vw, 1.125rem);
      }

      .space-responsive > * + * {
        margin-top: clamp(1rem, 3vw, 2rem);
      }

      /* Print styles */
      @media print {
        body {
          background: white !important;
          color: black !important;
        }
        
        .no-print {
          display: none !important;
        }
      }
    </style>
  </body>
</html>